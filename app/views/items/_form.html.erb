        <%= render 'errors/errors' %>

    <%= form_for(@item) do |f| %>
        <div class="item">
        <div class="thumbnail">
            <div class="caption-item">
                <div class="form-group">
                    <%= f.label :name %> :
                    <%= f.text_field :name, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :new %> :
                    <%= f.check_box :new, class: "form-control" %> (check box if item is new)
                </div>

                <div class="form-group">
                    <%= f.label :category %> :
                    <%= f.text_field :category_name, list: "categories_autocomplete" %>
                    <datalist id="categories_autocomplete">
                        <% Category.all.each do |category| %>
                            <option value="<%= category.name %>">
                        <% end %>
                    </datalist>
                </div>

                <div class="form-group">
                    <%= f.label :description %> :
                    <%= f.text_area :description, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :image %> :
                    <%= f.file_field :image, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :price %> : $
                    <%= f.text_field :price, class: "form-control" %>
                </div>

                <div class="actions">
                    <%= f.submit "List Your Item", class: "btn btn-success btn-lg" %>
                    <%= link_to "GoTo My Page", user_path(current_user), class: "btn btn-success btn-lg" %>
                </div>
            </div>
        </div>
    <% end %>
</div>

