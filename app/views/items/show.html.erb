    <h2><%= @item.name %></h2>

        <li>Item Description: <%= @item.description %></li>
        <li>Item Price: $<%= @item.price %></li>
        <li>Item Category: <%= @item.category_name %></li>
        <li>Contact Seller: <%= link_to @item.user.email %></li>

    <% if current_user %>
        <%= link_to "Edit Item", edit_user_item_path(current_user, @item) %><br/>
        <%= link_to "Delete Item", @item, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %><br/>
        <%= link_to "My Page", user_path(current_user) %>
    <% end %>


