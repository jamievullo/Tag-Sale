<div class="title-container">
    <div class="thumbnail">
        <h2><%= @item.name %></h2>
    </div>
</div>
        <% if @item.image.attached? %>
        <%= image_tag(@item.image, style:'width:30%') %>
        <% end %>
    <div class="item">
        <div class="thumbnail">
            <div class="caption">
                <p>Item Description: <%= @item.description %></p>
                <p>Price: $<%= @item.price %></p>
                <p>Category: <%= @item.category_name %></p>
            
                <% if current_user == @item.user %>
                    <%= link_to "Edit Item", edit_user_item_path(current_user, @item), class: "btn btn-primary" %><br/>
                    <%= link_to "Delete Item", @item, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class: "btn btn-primary" %><br/>
                    <%= link_to "Back to My Items", user_path(current_user), class: "btn btn-primary" %>
                <% else %>
                    <p>Seller: <%= link_to @item.user.name, user_path(@item.user) %></p>
                    <p>Contact Seller: <%=  mail_to(@item.user.email, "Make an Offer", class: 'btn btn-primary btn-success btn-lg', cc: "salesteam@tagsale.io", subject: @item.name, body: "****ALERT FROM TAG SALE****\n\n\nYou have questions from a TagSale.io user in reference to your item: #{@item.name}.\n\n\n\n Dear #{@item.user.name},\nI have some questions about #{@item.name}.") %></p>
                <% end %>
            </div>
        </div>
    </div>



