<% if current_user == @user %>
<div class="title-container">
    <h1>Welcome <%= @user.name %></h1>
</div>
    <h3>Your Current Items Listed for Sale</h3>
        <ul>
            <% @user.items.each do |item| %>
        <li><%= link_to item.name, user_item_path(@user, item) %> - $<%= item.price%></li>
            <% end %>
        </ul>
        <%= link_to "Create a Listing", new_user_item_path(@user), class: "btn btn-primary" %>
<% else %>
<div class="title-container">
    <h1><%= @user.name %>'s Items </h1>
</div>
    <h3>Current Items Listed for Sale</h3>
    <ul>
        <% @user.items.each do |item| %>
    <li><%= link_to item.name, user_item_path(@user, item) %> - $<%= item.price%></li>
        <% end %>
    </ul>
<% end %>

