<!DOCTYPE html>
<html>
  <head><br/><br/>
    <title>TagSale</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
      <%= button_to 'Search by Categories', categories_path %>
      <%= button_to 'Items for Sale', items_path %>
            <% if !logged_in? %>
              <%= button_to 'Sign Up', new_user_path %> 
              <%= button_to 'Sign in', login_path %>
            <% else %>
              <%= button_to "My Dashboard", user_items_path(session[:user_id]) %>
              <%= button_to "Log Out", logout_path %>
            <% end %>

    <%= yield %>
  </body>
</html>
