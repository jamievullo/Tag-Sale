<%= form_for(@item) do |f| %>

<%= f.label :name %> :
<%= f.text_field :name %>
<br/>
<%= f.label :new %> :
<%= f.check_box :new %> (check box if item is new)
<br/>

<%= f.label :category %> :
<%= f.text_field :category_name, list: "categories_autocomplete" %>
<datalist id="categories_autocomplete">
<% Category.all.each do |category| %>
<option value="<%= category.name %>">
<% end %>
</datalist>

<%= f.label :description %> :
<%= f.text_area :description %>

<%= f.label :price %> : $
<%= f.text_field :price %>

<%= f.submit "List Item" %>
<% end %>