<!DOCTYPE html>
<html lang="en">
  <head> 
    <title>TagSale</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <meta name="viewport" content="width=device-width, initial-scale=1" >
      <%= favicon_link_tag asset_path('Tag-Sale Favicon.png'), :rel => 'icon', :type => "image/png" %>
  </head>

  <body>
        
          <div class="topnav">
            
              <div class="nav-link" >
                <a href="/"><%= image_tag "TAG-SALE-POSSIBLE LOGO.jpeg", height:"40" %></a>
              </div>
              <%= link_to 'Browse by Categories', categories_path, class: "nav-link" %>
              <%= link_to 'All Items for Sale', items_path, class: "nav-link" %>
              <% if !logged_in? %>
                <%= link_to 'Sign Up', signup_path, class: "nav-link" %>
                <%= link_to 'Sign in', login_path, class: "nav-link" %>
                <%= link_to "Login via Facebook", "/auth/facebook", class: "nav-link" %>
              <% else %>
                <%= link_to "My DashBoard", user_path(current_user), class: "nav-link" %>
                <%= link_to "Log Out", logout_path, method: :delete, class: "nav-link" %>
              <% end %>
            
          </div>
        
      

    <section class="container">

        <%= yield %>
    </section>
  </body>
</html>