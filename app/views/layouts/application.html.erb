<!DOCTYPE html>
<html lang="en">
  <head> 
    <title>TagSale</title>
    <%= csrf_meta_tags %>
    <!--<%= csp_meta_tag %>-->

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1" >
    <%= favicon_link_tag asset_path('Tag-Sale Favicon.png'), :rel => 'icon', :type => "image/png" %>

  </head>

  <body>
    <header class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar header">
            <li><%= link_to 'Browse by Categories', categories_path %></li>
            <li><%= link_to 'All Items for Sale', items_path %></li>
          </div>
          <ul class="nav navbar-nav navbar right">
            <% if !logged_in? %>
              <li><%= link_to 'Sign Up', signup_path %></li>
              <li><%= link_to 'Sign in', login_path %></li>
              <li><%= link_to "Login via Facebook", "/auth/facebook" %></li>
            <% else %>
              <li><%= link_to "My DashBoard", user_path(current_user) %></li>
              <li><%= link_to "Log Out", logout_path, method: :delete %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <section class="container">
      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash <%= alert_class(key) %>"><%= value %></div>
          <% end %>
        </div>
    <%= yield %>
      </section>
  </body>
</html>
